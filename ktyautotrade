-- Server-Side Logic
if game:GetService("RunService"):IsServer() then
    local HttpService = game:GetService("HttpService")
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local NetworkFolder = ReplicatedStorage:FindFirstChild("Network") or Instance.new("Folder", ReplicatedStorage)
    NetworkFolder.Name = "Network"

    local RequestEvent = Instance.new("RemoteEvent", NetworkFolder)
    RequestEvent.Name = "RequestEvent"

    local function handleRequest(player, requestData)
        -- Here, you'd place your HTTP request logic.
        -- This is a placeholder to demonstrate where the request would be executed.
        print("Received request from:", player.Name, "with data:", requestData)
        -- Example of what you might do:
        -- local response = HttpService:PostAsync("https://example.com/api/data", requestData)
        -- print("Response:", response)
    end

    RequestEvent.OnServerEvent:Connect(handleRequest)
end

-- Client-Side Logic
if game:GetService("RunService"):IsClient() then
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local player = game:GetService("Players").LocalPlayer
    local requestEvent = ReplicatedStorage.Network:WaitForChild("RequestEvent")

    -- Example function to call the server
    local function makeRequest(data)
        requestEvent:FireServer(data)
    end

    -- Example usage
    makeRequest("{ 'data': 'This is a test.' }")
end
